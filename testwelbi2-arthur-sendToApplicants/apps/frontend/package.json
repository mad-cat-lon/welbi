{
  "name": "@testwelbi/frontend",
  "version": "0.1.0",
  "description": "React frontend application",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "react": "latest",
    "react-dom": "latest",
    "@tanstack/react-router": "latest",
    "@tanstack/react-query": "latest",
    "@tanstack/router-devtools": "latest",
    "@graphql-typed-document-node/core": "latest",
    "@testwelbi/ui": "workspace:*",
    "@testwelbi/types": "workspace:*",
    "@testwelbi/query-client": "workspace:*",
    "@testing-library/react": "~16.3.0",
    "@testing-library/dom": "~10.4.0",
    "@faker-js/faker": "~9.9.0"
  },
  "devDependencies": {
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/node": "latest",
    "@types/bun": "latest",
    "@vitejs/plugin-react": "latest",
    "typescript": "latest",
    "vite": "^5.2.8",
    "rimraf": "latest",
    "@tanstack/router-vite-plugin": "~1.123.2",
    "vitest": "~3.2.4",
    "vite-plugin-static-copy": "~3.1.0",
    "jsdom": "~26.1.0",
    "@testing-library/jest-dom": "~6.6.3"
  }
} 
